<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".datve.ThongTinThanhToan">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="10dp"
        android:background="#112d6a" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F6F6F6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Nhập thông tin"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/LnThongtin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:hint="John Dang"
                    android:textColor="#112d6a"
                    android:textColorHint="#CCC8C8"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="18dp"
                        android:id="@+id/phoneView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Phone: 0123456789 "
                        android:textColor="#112d6a"
                        android:textColorHint="#CCC8C8" />

                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:textColor="#112d6a"
                        android:textSize="18dp"
                        android:id="@+id/emailView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Birthday: dd/mm/yyyy"
                        android:textColorHint="#CCC8C8"
                        />
                    <TextView
                        android:textColor="#112d6a"
                        android:textSize="18dp"
                        android:id="@+id/ngaysinhView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Birthday: dd/mm/yyyy"
                        android:textColorHint="#CCC8C8"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/cou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Số hành khách"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewSokhach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:textSize="19dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F6F6F6"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tvmuave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/vemaybay"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23:00"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ngay1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/12/2003"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/thoigianbay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:text="1h25"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/gio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:00"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ngay2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/12/2003"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icons8_catcach" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icons8_gach" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/icons8_hacanh" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/di"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đà Nẵng"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/san1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sân bay tân sơn nhất"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/ari1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bg_edt"
                            android:paddingHorizontal="10dp"
                            android:text="bombo airline" />

                        <TextView
                            android:id="@+id/den"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hà Nội"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/san2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sân bay nội bài"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:background="#F6F6F6"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <EditText
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:hint="Nhập mã giảm giá (chỉ áp dụng 1 lần)"
            android:textColor="#112d6a"
            android:background="@drawable/edtmagiamgia"
            android:layout_weight="1"
            android:id="@+id/discountCodeEditText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>
        <Button
            android:id="@+id/buttonOpenSpinWheel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/edtmagiamgia"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="Áp dụng"
            android:textAllCaps="false"
            android:textColor="#112d6a"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TongTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Tổng tiền "
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TongSoNguoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="*4 vé"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tonggiatien"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="4.200.000"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:text="/VND"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tieptuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#112d6a"
            android:gravity="center"
            android:padding="10dp"
            android:text="Thêm vào giỏ hàng"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
