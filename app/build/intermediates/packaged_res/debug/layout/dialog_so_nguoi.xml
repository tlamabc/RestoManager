<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Chọn số lượng hành khách"
        android:textStyle="bold"
        android:gravity="center"
    android:textColor="#112d6a"
        android:padding="15dp"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người Lớn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ 12 tuổi"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginRight="5dp"
                android:id="@+id/btnMinusLon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:id="@+id/tvNumberLon"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_toStartOf="@id/btnPlusLon"
                android:layout_toEndOf="@id/btnMinusLon"
                android:text="1"
                android:textSize="21dp" />
            <Button
                android:id="@+id/btnPlusLon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>
    //------------------
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trẻ Em" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ 2 - 11 tuổi"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginRight="5dp"
                android:id="@+id/btnMinusTreEm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:id="@+id/tvNumberTreEm"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_toStartOf="@id/btnPlusTreEm"
                android:layout_toEndOf="@id/btnMinusTreEm"
                android:text="0"
                android:textSize="21dp" />
            <Button
                android:id="@+id/btnPlusTreEm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>
    //-----------------------
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em Bé" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dưới 2 tuổi"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginRight="5dp"
                android:id="@+id/btnMinusEmBe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-" />
            <TextView
                android:id="@+id/tvNumberEmBe"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_toStartOf="@id/btnPlusEmBe"
                android:layout_toEndOf="@id/btnMinusEmBe"
                android:text="0"
                android:textSize="21dp" />
            <Button
                android:id="@+id/btnPlusEmBe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnSoKhach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Xác Nhận"
        android:textStyle="bold"/>

</LinearLayout>
