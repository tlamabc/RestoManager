<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/explorePic"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/explore2" />

    <TextView
        android:id="@+id/exploreName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="title"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/explorePic"
        app:layout_constraintTop_toBottomOf="@+id/explorePic"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/exploreName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:text="title1"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exploreName"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="@+id/exploreName"
        app:layout_constraintTop_toBottomOf="@+id/exploreName"
        app:layout_constraintVertical_bias="0.157" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/exploreName1"
        app:layout_constraintStart_toStartOf="@+id/explorePic"
        app:layout_constraintTop_toBottomOf="@+id/explorePic"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/iconvitri" />
</androidx.constraintlayout.widget.ConstraintLayout>