<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".datve.BookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Mua Vé Máy Bay"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvdiemdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm đi"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtdiemdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvdiemden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm đến"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtdiemden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtthoigian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày Đi"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edtthoigian"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:hint="dd/MM/yyyy"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khứ Hồi"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <Switch
                        android:id="@+id/swKhuhoi"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/ngayve01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Về"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvNgayVe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:hint="dd/MM/yyyy"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvsohanhkhach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số hành khách"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtsohanhkhach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btndatve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm chuyến bay"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ViewFlipper>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
