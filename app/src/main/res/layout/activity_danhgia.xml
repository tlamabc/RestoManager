<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">
    <android.widget.Toolbar
        android:gravity="center"
        android:id="@+id/toolbar"
        android:titleTextColor="@color/bg_register"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="@drawable/thanh_lienhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:gravity="center">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Ứng dụng như nào ?"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#112d6a"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:text="Đánh giá của bạn giúp chúng tôi\n hoàn thiện hơn"
        android:textSize="18dp"
        android:textStyle="normal"
        android:textColor="#112d6a"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/sao0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sao0"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/sao1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sao1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sao2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sao2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sao3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sao3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sao4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sao4"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/sao5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/sao5"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/xao"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/xo"
            android:soundEffectsEnabled="false" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/xao"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image22"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/xo" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/xao"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image33"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/xo" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/xao"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image44"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/xo" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/xao"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image55"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/xo" />
    </FrameLayout>

    <LinearLayout
        android:background="@drawable/thoat"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <EditText
            android:layout_margin="10dp"
            android:gravity="start"
            android:id="@+id/editText"
            android:hint="nhập đánh giá của bạn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/thoat" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/giu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:background="@drawable/style_button"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Đánh Giá"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>